*.html text eol=lf
*.xml text eol=lf
*.txt text eol=lf
*.sql text eol=lf
*.prisma text eol=lf
*.config.js text eol=lf
*.config.ts text eol=lf
*.env text eol=lf
*.env.* text eol=lf
*.example text eol=lf
*.lock text eol=lf
*.log text eol=lf
*.gitignore text eol=lf
*.gitattributes text eol=lf
*.editorconfig text eol=lf
*.nvmrc text eol=lf
*.dockerignore text eol=lf
*.npmrc text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.db binary
*.sqlite binary
*.sqlite3 binary

# Shell scripts must use LF
*.sh text eol=lf
*.bash text eol=lf

# Windows batch files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Package manager lock files
package-lock.json text eol=lf
yarn.lock text eol=lf
pnpm-lock.yaml text eol=lf

# Configuration files
