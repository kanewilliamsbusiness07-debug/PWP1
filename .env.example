#
# Copy this file to `.env` and fill in the values for local development.
# Amplify injects the same keys via its Environment variables UI, so do not
# rely on SSM Parameter Store unless you explicitly configure it.
#

# --- Database ---
DATABASE_URL="postgresql://username:password@host:5432/database"

# --- NextAuth / JWT ---
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="change-me"
JWT_SECRET="change-me"
# Optional refresh token secret; falls back to JWT_SECRET when empty.
JWT_REFRESH_SECRET=""

# --- Application Secrets ---
ENCRYPTION_KEY="32-character-minimum-secret"
CRON_SECRET="cron-shared-secret"

# --- Email Integration (optional) ---
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@example.com"

# --- Hosting Flags ---
# Set to "true" when building on Amplify Hosting so Next.js does not switch to
# standalone output.
AMPLIFY_HOSTING="false"
NODE_ENV="development"
