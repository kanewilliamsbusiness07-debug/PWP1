# FinCalc Pro Environment Variables
# Copy this file to .env and update the values

# Application
NODE_ENV=development
APP_PORT=3000
APP_URL=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fincalc_pro
DB_USER=fincalc_user
DB_PASSWORD=secure_password_here
DATABASE_URL="postgresql://fincalc_user:secure_password_here@localhost:5432/fincalc_pro"

# Redis (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_here
REDIS_URL="redis://:redis_password_here@localhost:6379"

# JWT Secrets (generate random strings for production)
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
JWT_REFRESH_SECRET=your_refresh_secret_key_minimum_32_characters

# Encryption Key (32 characters for AES-256)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Email Configuration (SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
SMTP_FROM=noreply@yourdomain.com

# Tax Rules API (for updating Australian tax tables)
TAX_RULES_URL=https://api.ato.gov.au/tax-rules
TAX_RULES_API_KEY=your_ato_api_key
TAX_RULES_LAST_UPDATED=2024-07-01

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads
PDF_STORAGE_DIR=./pdfs

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds

# Session Configuration
SESSION_SECRET=your_session_secret_minimum_32_characters
SESSION_MAX_AGE=604800000  # 7 days in milliseconds

# Feature Flags
ENABLE_2FA=true
ENABLE_AUDIT_LOGGING=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_MASTER_ADMIN_IMPERSONATION=true

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Development Only (remove in production)
DISABLE_RATE_LIMITING=false
SKIP_EMAIL_VERIFICATION=true